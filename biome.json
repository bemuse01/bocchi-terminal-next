{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": ["node_modules"],
		"include": ["src/**/*.tsx", "src/**/*.ts"]

	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": "warn",
				"noUndeclaredVariables": "warn"
			},
			"style": {
				"useTemplate": "off",
				"useSelfClosingElements": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "es5",
			"arrowParentheses": "always",
			"bracketSpacing": true
		}
	},
	"json": {
		"linter": {
			"enabled": false
		},
		"formatter": {
			"enabled": false
		}
	}
}
